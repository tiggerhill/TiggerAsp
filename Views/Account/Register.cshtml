@model TiggerAsp.Models.ViewModels.RegisterViewModel
@{ 
    ViewBag.Title = "Register";
}

<h1>Register</h1><br />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Register">
    <div class="form-group row">
        <div class="col-sm-2"><h5><label>Username:</label></h5></div>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Username"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><h5><label>Password:</label></h5></div>
        <div class="col-sm-4">
            <input type="password" asp-for="Password"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class=" offset-2 col-10">
            <p>
                As you can see by the little padlock symbol in your browser's address bar,
                this is a secure website, meaning information that you enter and send
                to this site is safe (try clicking on the padlock for more info).  
                However, please create a UNIQUE password to use at ONLY this site
                (which is good practice for all your passwords).  As website owner, I do
                have access to your password for this site, and I would feel very uncomfortable
                thinking that you might be using the same password here that you use at any
                other site.
            </p>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"><h5><label>Confirm Password:</label></h5></div>
        <div class="col-sm-4">
            <input type="password" asp-for="ConfirmPassword"
                   class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4"> <br /><br />
            Already registered? <a asp-action="LogIn">&nbsp;&nbsp;Log In</a>
        </div>
    </div>

</form>


